{
  "name": "littlellm",
  "version": "1.0.0",
  "description": "A lightweight AI chat application with multi-provider support",
  "author": "LittleLLM Team",
  "private": true,
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build && node scripts/fix-paths.js",
    "build-no-lint": "next build --no-lint && node scripts/fix-paths.js",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "electron": "npm run build-electron && npx electron .",
    "electron-dev": "concurrently \"npm run dev\" \"npm run build-electron && wait-on http://localhost:3000 && npx electron .\"",
    "electron-pack": "npm run build && npm run build-electron && electron-builder",
    "build-electron": "tsc --project electron/tsconfig.json",
    "dist": "npm run build && npm run build-electron && electron-builder --publish=never",
    "dist:win": "npm run build && npm run build-electron && electron-builder --win --publish=never",
    "dist:win-installer": "npm run build && npm run build-electron && electron-builder --win --config.win.target=nsis --publish=never",
    "dist:win-portable": "npm run build && npm run build-electron && electron-builder --win --config.win.target=portable --publish=never",
    "build:windows": "node scripts/build-windows.js",
    "dist:mac": "npm run build && npm run build-electron && electron-builder --mac --publish=never",
    "dist:linux": "npm run build && npm run build-electron && electron-builder --linux --publish=never"
  },
  "dependencies": {
    "@microsoft/fetch-event-source": "^2.0.1",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.1.5",
    "@types/mime-types": "^3.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^10.1.0",
    "lucide-react": "^0.352.0",
    "mime-types": "^3.0.1",
    "next": "14.1.0",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^5.3.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.2",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.2.0",
    "electron": "^37.1.0",
    "electron-builder": "^25.1.8",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "png-to-ico": "^2.1.8",
    "postcss": "^8.4.35",
    "prettier": "^3.6.2",
    "svg2img": "^1.0.0-beta.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3"
  }
}
